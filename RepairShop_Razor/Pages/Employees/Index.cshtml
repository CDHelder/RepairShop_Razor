@page
@model RepairShop_Razor.Pages.Employees.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].ExpertiseLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].Emailadress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employee[0].PhoneNumber)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Employee) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpertiseLevel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Emailadress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.EmployeeID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.EmployeeID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.EmployeeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
